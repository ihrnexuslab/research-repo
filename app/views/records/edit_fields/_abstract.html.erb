<% if defined? props %>
<% @clabel = props[:label] %>
<% else %>
<% @clabel = :nil %>
<% end %>

<% if f.object.class.multiple? key %>
  <%= f.input key, as: :multi_value_with_help, input_html: { class: 'form-control', type: 'textarea' }, label: @clabel, required: f.object.required?(key) %>
<% else %>
  <%= f.input key, required: f.object.required?(key), label: @clabel %>
<% end %>
