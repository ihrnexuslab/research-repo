<% @text = nil %>
<% if defined? label_text %>
<% @text = label_text%>
<% end %>
<% if f.object.class.multiple? key %>
  <%= f.input key, as: :multi_value_with_help, input_html: { class: 'form-control', type: 'textarea' }, required: f.object.required?(key) %>
<% else %>
  <%= f.input key, required: f.object.required?(key), label: @text %>
<% end %>
